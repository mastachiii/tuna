<!DOCTYPE html>
<html lang="en">
    <body>
        <%- include('../partials/navbar') %>
        <a href="books/add" style="display: block">add new book</a>
        <form action="?sortBy=votes&order=asc">
            <input type="hidden" name="sortBy" value="votes" />
            <input type="hidden" name="order" value="asc" />
            <button>votes-asc</button>
        </form>
        <form action="books/sort">
            <input type="hidden" name="sortBy" value="votes" />
            <input type="hidden" name="order" value="desc" />
            <button>votes-desc</button>
        </form>
        <!--TITLE SORT-->
        <form action="books/sort">
            <input type="hidden" name="sortBy" value="title" />
            <input type="hidden" name="order" value="asc" />
            <button>title-asc</button>
        </form>
        <form action="books/sort">
            <input type="hidden" name="sortBy" value="title" />
            <input type="hidden" name="order" value="desc" />
            <button>title-desc</button>
        </form>
        <%- include('../partials/head', {title: 'Books'})%> <% books.forEach(book => { %>
        <!--VOTES SORT-->
        <img src="<%= book.image %>" alt="" />
        <h4><a href="books/<%=book.id%>"><%= book.title %></a></h4>
        <p><em><%= book.author %></em></p>
        <p><em><%= book.votes %> votes</em></p>
        <% }) %>
    </body>
</html>
