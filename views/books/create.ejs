<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Add a New Book', cssPath: '/css/create.css'}) %>

    <body>
        <%- include('../partials/navbar') %>
        <!--    -->
        <form action="/books" method="post" class="book-form">
            <h1>Add a new book</h1>
            <p>Title, Author, and Genre are required.</p>
            <% if (locals.errors) {%>
            <ul>
                <% errors.forEach(function(error) { %>
                <li>‚ùå <%= error.msg %></li>
                <% }); %>
            </ul>
            <% } %> <%- include('../partials/bookInput', {label: 'title', required: true, value: ''}) %>
            <!---->
            <%- include('../partials/bookInput', {label: 'author', required: true, value: ''}) %>
            <fieldset>
                <legend>Genre</legend>
                <%- include('../partials/genreOption',{genre: 'Fiction'}) %>
                <!--stupid fucking formatter-->
                <%- include('../partials/genreOption',{genre: 'Nonfiction'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Crime'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Romance'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Fantasy'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Action'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Adventure'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Mystery'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Horror'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Drama'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'History'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Philosophy'}) %>
                <!---->
                <%- include('../partials/genreOption',{genre: 'Science Fiction'}) %>
            </fieldset>
            <%- include('../partials/bookInput', {label: 'image', required: false, value: ''}) %>
            <!---->
            <label for="review">Review </label>
            <textarea name="review" id="review"></textarea>
            <button style="display: block">ADD</button>
        </form>
    </body>
</html>
